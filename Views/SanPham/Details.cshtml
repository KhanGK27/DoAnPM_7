@model WebBanDienThoai.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
    WebBanDienThoai.Models.BanDienThoaiContext db = new WebBanDienThoai.Models.BanDienThoaiContext();
    var spBanChay =  db.SanPhams.Where(x => x.BestSeller == true);
}

  <!-- about section -->

  <section class="about_section layout_padding">
    <div class="container  ">
      <div class="row">
        <div class="col-md-6 col-lg-5 ">
          <div class="img-box">
            <img src="@Model.AnhSp" alt="">
          </div>
        </div>
        <div class="col-md-6 col-lg-7">
          <div class="detail-box">
            <div class="heading_container">
              <h2>
                @Model.TenSp
              </h2>
            </div>
            <h3>
                @Model.GiaSp.ToString("#,00") VNĐ
              </h3>
            <p>
              @Model.MotaSp
            </p>
            <a href="">
              Mua Ngay
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- end about section -->
